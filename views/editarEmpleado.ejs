<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

<script>
    function validate(input) {
        let validityState_object = input.validity;

        if (validityState_object.patternMismatch) {
            input.setCustomValidity('Entrada no valida.');
        } 
        else {
            input.setCustomValidity('');
        }
    }
</script>

<div class = "justify-content-center align-items-center h-100">
    <div>
        <form action="/editarEmpleado" method="post">
            <h2 class="fw-bold mb-2 eliminarFormTitulo">Editar Empleado <%= campEditar  %></h2>
            
            <div class="row" style="text-align: center;">
                <div class="col-sm">
                </div>
                
                <div class="form-outline form-white mb-4 col-sm-2 elimnarFormInput">
                    <label class="form-label fw-bold" for="nuevoValor">Editar Valor</label>
                    <% if (campEditar === "Nombre Completo") { %>
                        <input 
                            id="nuevoValorNombre" 
                            name="nuevoValor" 
                            class="form-control" 
                        />
                        
                    <% } else if (campEditar === "Fecha de Nacimiento") { %>
                        <input 
                            id="nuevoValorFecha" 
                            name="nuevoValor" 
                            class="form-control" 
                            type="date"
                            />

                    < } else if (campEditar === "Escolaridad") { %>
                        <select 
                            id="escolaridad"
                            name ="nuevoValorEscolaridad" 
                            class="form-select"
                            >
                            <option value="" selected hidden></option>
                            <option value="Basica"> Basica </option>
                            <option value="Media Superior"> Media Superior </option>
                            <option value="Técnico Superior Universitario"> Técnico superior universitario </option>
                            <option value="Licenciatura"> Licenciatura </option>
                        </select>

                    <% } else if (campEditar === "CURP") { %>
                        <input
                            id="CURP"
                            name="nuevoValorCurp"
                            class="form-control"
                            pattern="^[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])[HM]{1}(AS|BC|BS|CC|CS|CH|CL|CM|DF|DG|GT|GR|HG|JC|MC|MN|MS|NT|NL|OC|PL|QT|QR|SP|SL|SR|TC|TS|TL|VZ|YN|ZS|NE)[B-DF-HJ-NP-TV-Z]{3}[0-9A-Z]{1}[0-9]{1}$"
                            onsubmit="validate (this)"
                        />

                    <% } else if (campEditar === "RFC") { %>
                        <input
                            id="RFC"
                            name="nuevoValorRFC"
                            class="form-control"
                            pattern = "^[A-Z&Ñ]{3,4}[0-9]{2}(0[1-9]|1[012])(0[1-9]|[12][0-9]|3[01])[A-Z0-9]{2}[0-9A]$"
                            onsubmit="validate (this)"
                            />
                            
                    < } else if (campEditar === "Puesto") { %>
                        <select 
                            id="puesto" 
                            name ="nuevoValorPuesto" 
                            class="form-select"
                        >
                        <option value="" selected hidden></option>
                        <option value="Entrenador"> Entrenador </option>
                        <option value="Auxiliar Administrativo"> Auxiliar Administrativo </option>
                        <option value="Administrador"> Administrador </option>
                    </select>
                    
                    < } else if (campEditar === "Sueldo") { %>
                        <input 
                            id="sueldo"
                            name ="nuevoValorSueldo"
                            class="form-control"
                        />
                    <% } else { %>
                        <input id="nuevoValor" name="nuevoValor" class="form-control" />
                    <% } %>
                </div><div class="col-sm">
                </div>

                </div><div class="col-sm">
                </div>
            </div>

            <div style="text-align:center; margin-top: 30px;">
                <button type="submit" class="btn btn-danger">Editar</button>
            </div>
        </form>
    </div>
</div>

<%- include ('partials/footer.ejs') -%> 