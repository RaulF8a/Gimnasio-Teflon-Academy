<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

    <script>
        function validate(input) {
            let validityState_object = input.validity;

            if (validityState_object.patternMismatch) {
                input.setCustomValidity('Entrada no valida.');
            } 
            else {
                input.setCustomValidity('');
            }
        }
    </script>

    <div class="justify-content-center align-items-center h-100">
        <div>
            <form action="/editarEmpleado" method="post">
                <h2 class="fw-bold mb-2 eliminarFormTitulo">Editar Campo</h2>
                
                <div class="row" style="text-align: center;">
                    <div class="col-sm"></div>
                    
                    <div class="form-outline form-white mb-4 col-sm registrarAtletaFormInput">
                        <% if (campoEditarP === "fechaNacimiento") { %>
                            <label class="form-label fw-bold" for="nuevoValor">Fecha de Nacimiento</label>
                            <input id="nuevoValorFecha" name="nuevoValor" class="form-control" type="date"/>
                            <% } else if (campoEditarP === "nombre") { %>
                                <label class="form-label fw-bold" for="nuevoValor">Nombre</label>
                                <input id="nuevoValor" name="nuevoValor" class="form-control" />
                            <% } else if (campoEditarP === "curp") { %>
                                <label class="form-label fw-bold" for="nuevoValor">CURP</label>
                                <input
                                    id="CURP"
                                    name="nuevoValor"
                                    class="form-control"
                                    pattern="^[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])[HM]{1}(AS|BC|BS|CC|CS|CH|CL|CM|DF|DG|GT|GR|HG|JC|MC|MN|MS|NT|NL|OC|PL|QT|QR|SP|SL|SR|TC|TS|TL|VZ|YN|ZS|NE)[B-DF-HJ-NP-TV-Z]{3}[0-9A-Z]{1}[0-9]{1}$"
                                    onsubmit="validate (this)"
                                />
                            <% } else if (campoEditarP === "rfc") { %>
                                <label class="form-label fw-bold" for="nuevoValor">RFC</label>
                                <input
                                id="RFC"
                                name="nuevoValor"
                                class="form-control"
                                pattern="^[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])[A-Z]{2}[0-9]{1}$"
                                onsubmit="validate (this)"
                                />
                            <% } else if (campoEditarP === "sueldo") { %>
                                <label class="form-label fw-bold" for="sueldo">Sueldo</label>
                                <input id="sueldo" name="nuevoValor" class="form-control" type="number" min="0"/>
                                <% } else if (campoEditarP === "escolaridad") { %>
                                    <label class="form-label fw-bold" for="escolaridad">Escolaridad</label>
                                    <select id="escolaridad" name="nuevoValor" class="form-select">
                                        <option value="" selected hidden></option>
                                        <option value="Ninguna">Ninguna</option>
                                        <option value="Preescolar">Preescolar</option>
                                        <option value="Primaria">Primaria</option>
                                        <option value="Secundaria">Secundaria</option>
                                        <option value="Bachillerato">Bachillerato</option>
                                        <option value="Licenciatura">Licenciatura</option>
                                        <option value="Posgrado">Posgrado</option>
                                    </select>
                            <% } else if (campoEditarP === "telefono") { %>
                                <label class="form-label fw-bold" for="telefono">TÃ©lefono</label>
                                <input
                                    id="telefono"
                                    name="nuevoValor"
                                    class="form-control"
                                    pattern="\+{0,1}[0-9]{10,12}"
                                    onsubmit="validate (this)"
                                />
                            <% } else if (campoEditarP === "puesto") { %>
                                <label class="form-label fw-bold" for="puesto">Puesto</label>
                                <select id="puesto" name="nuevoValor" class="form-select">
                                    <option value="" selected hidden></option>
                                    <option value="Entrenador">Entrenador</option>
                                    <option value="Auxiliar Administrativo">Auxiliar Administrativo</option>
                                    <option value="Administrativo">Administrativo</option>
                                </select>
                                <% } %>
                    </div>
                        
                    <div class="col-sm"></div>
                </div>

                <div style="text-align:center; margin-top: 30px;">
                    <button type="submit" class="btn btn-danger">Editar</button>
                </div>
            </form>
        </div>

        <div style="text-align: center; padding-top: 120px; font-weight: bold;">
            <!-- Rellenar dinamicamente con mensaje de error -->
            <p> <%= mensajeError %></p>
        </div>
    </div>
    
<%- include ('partials/footer.ejs') -%> 