<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login:login, sesion: sesion}) -%>

<div class="justify-content-center align-items-center h-100">
  <h2 class="fw-bold mb-2 menuPrincipalTitulo" style="text-align: center">
      Registro de Accesos
  </h2>
  <div class="row tablaResumen" style="text-align: center;">
      <div class="col">
          <table class="table table-dark">
              <thead>
                  <tr>
                      <th scope="col">ID Visita</th>
                      <th scope="col">ID Cliente</th>
                      <th scope="col">Fecha de Ingreso</th>
                      <th scope="col">Hora de Ingreso</th>
                  </tr>
              </thead>
              <tbody>
                  <% listaAccesos.forEach ((element) => { %>
                      <tr class="table-secondary">
                          <th scope="row"><%= element.id_visita %> </th> 
                          <td><%= element.id_cliente %> </td> 
                          <td><%= element.fecha %> </td> 
                          <td><%= element.hora %> </td> 
                      </tr>
                  <% }); %> 
                  
                </tbody>
          </table>
      </div> 
  </div>   

  <div class="row" style="text-align: center; padding-top: 50px;">
      <div class="col">
          <form action="/verRegistroAcceso" method="post">
              <button type="submit" class="btn btn-dark">Regresar</button>
          </form>
      </div>
  </div>
</div>

