<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

    <div class="justify-content-center align-items-center h-100">
        <h2 class="fw-bold mb-2 menuPrincipalTitulo" style="text-align: center">
            Resumen de Atleta
        </h2>
        <% if (privilegio != "Atleta") { %>
            <div class="row tablaResumen" style="text-align: center;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Valor Actual</th>
                            <th scope="col">Nuevo Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-secondary">
                          <th scope="row">ID Cliente</th>
                          <td><%= resultados[0].id_cliente %></td>
                          <td>-</td>
                        </tr>
                        <tr class="table-secondary">
                          <th scope="row">Peso</th>
                          <td><%= resultados[0].peso %></td>
                          <td><%= nuevoPeso %></td>
                        </tr>
                        <tr class="table-secondary">
                          <th scope="row">Estatura</th>
                          <td><%= resultados[0].altura %></td>
                          <td><%= nuevaEstatura %></td>
                        </tr>
                        <tr class="table-secondary">
                            <th scope="row">Indice Masa Corporal</th>
                            <td><%= resultados[0].imc_cliente %></td>
                            <td><%= (nuevoPeso / (Math.pow (nuevaEstatura, 2))).toFixed (2) %></td>
                          </tr>
                      </tbody>
                </table>
      
            </div>
    
            <div class="row" style="text-align: center;">
                <div class="col-sm"></div>
                <div class="form-outline form-white mb-4 col-sm elimnarFormInput">
                    <label class="form-label fw-bold" for="objetivo">Objetivo</label>
                    <input class="form-control" id="objetivo" name="objetivo" type="text" disabled style="height: 100px;"
                    value="<%= resultados[0].objetivo %>" style="text-align: center; font-weight: bold;" />
                </div>
                <div class="col-sm"></div>
            </div>
    
            <div class="row" style="text-align: center; padding-top: 30px;">
                <div class="col">
                    <form action="/resumen" method="post">
                        <button type="submit" class="btn btn-dark">Establecer Nuevo Objetivo</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="row tablaResumen" style="text-align: center;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Valor Actual</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-secondary">
                          <th scope="row">ID Cliente</th>
                          <td><%= resultados[0].id_cliente %></td>
                        </tr>
                        <tr class="table-secondary">
                          <th scope="row">Peso</th>
                          <td><%= resultados[0].peso %></td>
                        </tr>
                        <tr class="table-secondary">
                          <th scope="row">Estatura</th>
                          <td><%= resultados[0].altura %></td>
                        </tr>
                        <tr class="table-secondary">
                            <th scope="row">Indice Masa Corporal</th>
                            <td><%= resultados[0].imc_cliente %></td>
                          </tr>
                      </tbody>
                </table>
      
            </div>
    
            <div class="row" style="text-align: center;">
                <div class="col-sm"></div>
                <div class="form-outline form-white mb-4 col-sm elimnarFormInput">
                    <label class="form-label fw-bold" for="objetivo">Objetivo</label>
                    <input class="form-control" id="objetivo" name="objetivo" type="text" disabled style="height: 100px;"
                    value="<%= resultados[0].objetivo %>" style="text-align: center; font-weight: bold;" />
                </div>
                <div class="col-sm"></div>
            </div>
    
            <div class="row" style="text-align: center; padding-top: 30px;">
                <div class="col">
                    <form action="/resumenAtleta" method="post">
                        <button type="submit" class="btn btn-dark">Regresar</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

<%- include ('partials/footer.ejs') -%> 