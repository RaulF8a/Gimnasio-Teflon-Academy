<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

<div class="justify-content-center align-items-center h-100">
    <h2 class="fw-bold mb-2 menuPrincipalTitulo" style="text-align: center">
        Punto de Venta
    </h2>
    <div class="row tablaResumen" style="text-align: center;">
        <div class="col">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Existencia</th>
                    </tr>
                </thead>
                <tbody>
                    <% resultados.forEach ((element) => { %>
                        <tr class="table-secondary">
                            <th scope="row"><%= element.id_producto %> </th> 
                            <td><%= element.nombre %> </td> 
                            <td><%= element.descripcion %> </td> 
                            <td>$<%= element.precio %> </td> 
                            <td><%= element.existencia %> </td> 
                        </tr>
                    <% }); %> 
                    
                  </tbody>
            </table>
        </div>

        
    </div>   

    <div class="row" style="text-align: center; padding-top: 50px;">
        <div class="col">
            <form action="/puntoVentaInventario" method="post">
                <button type="submit" class="btn btn-dark">Regresar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') -%> 