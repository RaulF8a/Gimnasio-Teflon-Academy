<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login:
login, sesion: sesion}) -%>

    <script>
        function validate(input) {
            let validityState_object = input.validity;

            if (validityState_object.patternMismatch) {
                input.setCustomValidity('El formato no es correcto.');
            } 
            else {
                input.setCustomValidity('');
            }
        }
    </script>

    <div class="justify-content-center align-items-center h-100">
        <div>
            <form action="/registrarEmpleado" method="post">
                <h2 class="fw-bold mb-2 registrarEmpleadoFormTitulo">
                    Registrar Empleado
                </h2>

                <!-- Primera fila -->
                <div class="row" style="text-align: center">
                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="nombreCompleto">Nombre Completo</label>
                        <input id="nombreCompleto" name="nombreCompleto" class="form-control" />
                    </div>

                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="CURP">CURP</label>
                        <input
                            id="CURP"
                            name="curp"
                            class="form-control"
                            pattern="^[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])[HM]{1}(AS|BC|BS|CC|CS|CH|CL|CM|DF|DG|GT|GR|HG|JC|MC|MN|MS|NT|NL|OC|PL|QT|QR|SP|SL|SR|TC|TS|TL|VZ|YN|ZS|NE)[B-DF-HJ-NP-TV-Z]{3}[0-9A-Z]{1}[0-9]{1}$"
                            onsubmit="validate (this)"
                        />
                    </div>

                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="sueldo">Sueldo</label>
                        <input id="sueldo" name="sueldo" class="form-control" type="number" min="0"/>
                    </div>
                </div>

                <!-- Segunda fila -->
                <div class="row" style="text-align: center">
                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" name="fechaNacimientoLabel" for="fechaNacimiento">Fecha de Nacimiento</label>
                        <input 
                            id="fechaNacimiento"
                            name="fechaNacimiento" 
                            class="form-control" 
                            type="date"
                        />
                    </div>

                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="RFC">RFC</label>
                        <input
                            id="RFC"
                            name="rfc"
                            class="form-control"
                            pattern="^[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])[A-Z]{2}[0-9]{1}$"
                            onsubmit="validate (this)"
                        />
                    </div>

                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="escolaridad">Escolaridad</label>
                        <select id="escolaridad" name="escolaridad" class="form-select">
                            <option value="" selected hidden></option>
                            <option value="Ninguna">Ninguna</option>
                            <option value="Preescolar">Preescolar</option>
                            <option value="Primaria">Primaria</option>
                            <option value="Secundaria">Secundaria</option>
                            <option value="Bachillerato">Bachillerato</option>
                            <option value="Licenciatura">Licenciatura</option>
                            <option value="Posgrado">Posgrado</option>
                        </select>
                    </div>
                </div>

                <!-- Tercera Fila -->
                <div class="row" style="text-align: center">
                    <div class="col-sm">
                    </div>

                    <div class="form-outline form-white mb-4 col-sm registrarEmpleadoFormInput">
                        <label class="form-label fw-bold" for="puesto">Puesto</label>
                        <select id="puesto" name="puesto" class="form-select">
                            <option value="" selected hidden></option>
                            <option value="Entrenador">Entrenador</option>
                            <option value="Auxiliar Administrativo">Auxiliar Administrativo</option>
                            <option value="Administrativo">Administrativo</option>
                        </select>
                    </div>

                    <div class="col-sm">
                    </div>
                </div>

                <div style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-dark">Aceptar</button>
                </div>
            </form>
        </div>

        <div style="text-align: center; padding-top: 21px">
            <!-- Rellenar dinamicamente con mensaje de error -->
            <p><%= mensajeError %> </p>
        </div>
    </div>

<%- include ('partials/footer.ejs') -%>
