<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

<div class="justify-content-center align-items-center h-100">
    <div>
        <form action="/menuPrincipal" method="post">
            <h2 class="fw-bold mb-2 menuPrincipalTitulo" style="text-align: center">
                Punto de Venta
            </h2>

            <div class="row">
                <div class="col-sm"></div>
                
                <div class="col-sm d-grid" style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-danger" formmethod="get" formaction="/puntoVentaCarrito">Cobrar Productos</button> 
                </div>

                <div class="col-sm"></div>
            </div> 

            <div class="row">
                <div class="col-sm"></div>
                
                <div class="col-sm d-grid" style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-dark" formmethod="get" formaction="/puntoVentaAnadirInventario">Agregar Producto</button> 
                </div>

                <div class="col-sm"></div>
            </div> 

            <div class="row">
                <div class="col-sm"></div>
                
                <div class="col-sm d-grid" style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-dark" formmethod="get" formaction="/puntoVentaEliminarInventario">Eliminar Producto</button> 
                </div>

                <div class="col-sm"></div>
            </div> 

            <div class="row">
                <div class="col-sm"></div>
                
                <div class="col-sm d-grid" style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-dark" formmethod="get" formaction="/puntoVentaEditarInventario">Editar Producto</button> 
                </div>

                <div class="col-sm"></div>
            </div> 

            <div class="row">
                <div class="col-sm"></div>
                
                <div class="col-sm d-grid" style="text-align: center; margin-top: 25px">
                    <button type="submit" class="btn btn-dark" formmethod="get" formaction="/puntoVentaInventario">Consultar Inventario</button> 
                </div>

                <div class="col-sm"></div>
            </div> 
        </form>
    </div>
</div>

