<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

    <div class="justify-content-center align-items-center h-100">
        <div>
            <form action="/crearContrasenia" method="post">
                <h2 class="fw-bold mb-2 contraseniaFormTitulo">Crear Contraseña</h2>

                <div class="row" style="text-align: center;">
                    <div class="col-sm">
                    </div>

                    <div class="form-outline form-white mb-4 col-sm-2 contraseniaFormInput">
                        <label class="form-label fw-bold" for="digitarContrasenia">Contraseña</label>
                        <input
                            id="digitarContrasenia"
                            name="password"
                            class="form-control"
                            type="password"
                            placeholder="Minimo 8 caracteres"
                            minlength="8"
                        />
                    </div>

                    <div class="col-sm">
                    </div>
                </div>

                <div class="row" style="text-align: center;">
                    <div class="col-sm">
                    </div>

                    <div class="form-outline form-white mb-4 col-sm-2 contraseniaFormInput">
                        <label class="form-label fw-bold" for="confirmarContrasenia">Confirmar Contraseña</label>
                        <input
                            id="confirmarContrasenia"
                            name="confirmPassword"
                            class="form-control"
                            type="password"
                            placeholder="Minimo 8 caracteres"
                            minlength="8"
                        />
                    </div>

                    <div class="col-sm">
                    </div>
                </div>

                <div style="text-align:center; margin-top: 25px;">
                    <button type="submit" class="btn btn-dark">Aceptar</button>
                </div>
            </form>
        </div>

        <div style="text-align:center; padding-top: 40px;">
            <!-- Rellenar dinamicamente con mensaje de error -->
            <p><%= mensajeError %></p>
        </div>

        <div class="fw-bold" style="text-align:center; padding-top: 10px; font-size: 24px;">
            <p>Tu ID para iniciar sesión será <%= idUsuario %></p>
        </div>
    </div>

<%- include ('partials/footer.ejs') -%> 