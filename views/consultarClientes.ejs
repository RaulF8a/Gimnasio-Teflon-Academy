<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

<div class="justify-content-center align-items-center h-100">
    <h2 class="fw-bold mb-2 menuPrincipalTitulo" style="text-align: center">
        Clientes Registrados
    </h2>
    <div class="row tablaResumen" style="text-align: center;">
        <div class="col">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID del Cliente</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">CURP</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Peso</th>
                        <th scope="col">Altura</th>
                        <th scope="col">Fecha de Nacimiento</th>
                        <th scope="col">Fecha de Inscripción</th>
                        <th scope="col">Membresia</th>
                    </tr>
                </thead>
                <tbody>
                    <% resultados.forEach ((element) => { %>
                        <tr class="table-secondary">
                            <th scope="row"><%= element.id_cliente %> </th> 
                            <td><%= element.nombre_cliente %> </td> 
                            <td><%= element.curp %> </td> 
                            <td><%= element.tel_cliente %> </td> 
                            <td><%= element.peso %> </td> 
                            <td><%= element.altura %> </td>
                            <td><%= element.fecha_nacimiento %> </td>
                            <td><%= element.fecha_inscripcion %> </td>
                            <td><%= element.tipo_membresia %> </td>
                        </tr>
                    <% }); %>
                  </tbody>
            </table>
        </div>

        
    </div>   

    <div class="row" style="text-align: center; padding-top: 50px;">
        <div class="col">
            <form action="/consultarClientes" method="post">
                <button type="submit" class="btn btn-dark">Regresar al Menú</button>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') -%> 