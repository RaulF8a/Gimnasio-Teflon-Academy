<%- include ('partials/header.ejs', {titulo: titulo, usuario: usuario, login: login, sesion: sesion}) -%>

    <script>
        function validate(input) {
            let validityState_object = input.validity;

            if (validityState_object.patternMismatch) {
                input.setCustomValidity('El formato no es correcto.');
            } 
            else {
                input.setCustomValidity('');
            }
        }
    </script>

    <div class="justify-content-center align-items-center h-100">
        <div>
            <form action="/establecerNuevoObjetivo" method="post">
                <h2 class="fw-bold mb-2 eliminarFormTitulo">Establecer un Nuevo Objetivo</h2>

                <div class="row" style="text-align: center;">
                    <div class="col-sm"></div>
                    
                    <div class="form-outline form-white mb-4 col-sm elimnarFormInput">
                        <label class="form-label fw-bold" for="objetivo">Objetivo</label>
                        <input
                        id="objetivo"
                        name="objetivo"
                        class="form-control"
                        />    
                    </div>

                    <div class="col-sm"></div>
                </div>

                <div style="text-align:center; margin-top: 50px;">
                    <button type="submit" class="btn btn-danger">Establecer</button>
                </div>
            </form>
        </div>

        <div style="text-align: center; padding-top: 120px; font-weight: bold;">
            <!-- Rellenar dinamicamente con mensaje de error -->
            <p><%= mensajeError %> </p>
        </div>
    </div>

<%- include ('partials/footer.ejs') -%> 